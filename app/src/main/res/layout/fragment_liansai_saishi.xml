<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/black"
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/liansai"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/incluse_main_title"
                android:layout_marginLeft="15dp"
                android:src="@drawable/football_liansai2" />

            <TextView
                android:id="@+id/tv_liansai"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center|left"
                android:text="足球联赛HSL"
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="right|center">

                <ImageView
                    android:id="@+id/iv_liansai_saishi_add"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/add_saishi" />

            </LinearLayout>

        </LinearLayout>

        <com.cxjd.footballgame.utils.CustomExpandableListView
            android:id="@+id/el_saishi_liansai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:groupIndicator="@null"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            />

    </LinearLayout>

</ScrollView>