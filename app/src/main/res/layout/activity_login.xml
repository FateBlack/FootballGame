<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/login_football_bg"
    >


        <LinearLayout
            android:id="@+id/ll_login_top"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/online_logo" />

            <TextView
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="黑科赛事管理"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>


    <EditText
        android:id="@+id/et_login_username"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/white"
        android:textSize="24dp"
        android:hint="用户名"
        android:text="yinhaonan"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/et_login_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/white"
        android:textSize="24dp"
        android:text="1234"
        android:hint="密码"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/bt_login_denglu"
        android:textSize="30dp"
        android:text="登录"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/yuan_button"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginBottom="40dp"
        android:textColor="@color/colorPrimary"
        android:text="\@YOU软件开发工作室提供技术支持"
        android:gravity="center_horizontal|bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>