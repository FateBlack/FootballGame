<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/tongyi_title_moban" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:text="球队LOGO"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_yuandui_logo"
            android:src="@drawable/football_jisuanji"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <Button
            android:id="@+id/bt_yuandui_genggai"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:text="更改LOGO"
            android:textSize="25dp"
            android:background="@drawable/yuan_button"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:text="球队成员"
            android:textSize="18dp" />


         <ListView
             android:id="@+id/lv_yuanDui"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>